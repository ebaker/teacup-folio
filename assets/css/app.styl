@import 'nib'

body
  background #171d25
  color white
  font-family 'Lato'

  > h1
    font-family 'Open Sans'
    font-size 42px
    margin-top 40px
    text-align center

  .navigation
    display inline-block
    width 250px
    margin 40px 0px 0px 25%
    vertical-align top
    > ul
      list-style none
      padding-left 20px
      position relative
      > .slider
        background orange
        border-radius 1px
        height 40px
        left 0
        position absolute
        top 4px
        transition all 240ms cubic-bezier(0.145, 1.075, 0.345, 1.12) 60ms
        transition-duration 400ms
        width 6px
        &.contact
          transform translateY(0) translateZ(0)
        &.projects
          transform translateY(70px) translateZ(0)
        &.about
          transform translateY(140px) translateZ(0)
      > li
        box-sizing border-box
        cursor pointer
        font-family 'Lato'
        font-size 24px
        font-weight 400
        margin-bottom 20px
        padding 10px 6px

  .main
    display inline-block
    height 380px
    margin-top 40px
    position relative
    width 380px
    > .content
      opacity 0
      position absolute
      text-align center
      transition all ease-out 400ms
      img
        max-width 100%
      &.active
        opacity 1
        transition-delay 400ms
        z-index 100
      &.contact
        padding-top 60px
        img
          height 96px

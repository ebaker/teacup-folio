@import 'nib'

body
  background #171d25
  color white
  font-family 'Lato'
  margin 0

  > h1
    font-family 'Open Sans'
    font-size 42px
    margin-top 40px
    text-align center

  .navigation
    display inline-block
    width 250px
    margin 40px 0px 0px 25%
    vertical-align top
    > ul
      list-style none
      padding-left 20px
      position relative
      > .slider
        background orange
        border-radius 1px
        height 40px
        left 0
        position absolute
        top 4px
        transition all 240ms cubic-bezier(0.145, 1.075, 0.345, 1.12) 60ms
        transition-duration 400ms
        width 6px
        &.contact
          transform translateY(0) translateZ(0)
        &.projects
          transform translateY(70px) translateZ(0)
        &.about
          transform translateY(140px) translateZ(0)
      > li
        box-sizing border-box
        cursor pointer
        font-family 'Lato'
        font-size 24px
        font-weight 400
        margin-bottom 20px
        padding 10px 6px

  .main
    display inline-block
    height 380px
    margin-top 40px
    position relative
    width 380px
    > .content
      opacity 0
      position absolute
      text-align center
      transition all ease-out 400ms
      img
        max-width 100%
      &.active
        opacity 1
        transition-delay 400ms
        z-index 100
      &.contact
        padding-top 60px
        img
          max-height 96px
          width auto

.mobile
  display none

 @media (max-width: 640px)
   body
     h1
       display none
     .navigation
       background black
       display block
       margin 0
       max-height 0
       overflow hidden
       position fixed
       top 66px
       transition all ease-in 400ms
       width 100%
       z-index 200
       > ul
         border-top 1px dashed orange
         margin 0px
         padding-left 0px
         > .slider
           display none
         > li
           border-bottom 1px dotted gray
           margin 0
           padding 20px 20px 20px 60px
       &.open
         max-height 300px
      .main
        display block
        margin 0
        width 100%
        > .content
          box-sizing border-box
          padding 10px
          &.contact
            margin 30px auto
            padding 0
            width 100%
            > a
              display block
              margin-top 15px

   .mobile
     background black
     display block
     height 66px
     > div
       display inline-block
       font-size 42px
       padding 8px 12px
       &.button
         border-right solid 1px orange
         box-sizing border-box

 @media (max-width: 640px)
   body
     h1
       display none
   #app
     .navigation
       background black
       display block
       margin 0
       max-height 0
       overflow hidden
       position fixed
       top 66px
       transition all ease-in 400ms
       width 100%
       z-index 200
       > ul
         border-top 1px dashed orange
         margin 0px
         padding-left 0px
         > .slider
           display none
         > li
           border-bottom 1px dotted gray
           margin 0
           padding 20px 20px 20px 60px
       &.open
         max-height 300px
      .main
        display block
        margin 0
        width 100%
        > .spinner
          display none
        > .content
          box-sizing border-box
          padding 10px
          &.contact
            margin 30px auto
            padding 0
            width 100%
            > a
              display block
              margin-top 15px

   .mobile
     background black
     display block
     height 66px
     > div
       display inline-block
       font-size 42px
       padding 8px 12px
       &.button
         border-right solid 1px orange
         box-sizing border-box
